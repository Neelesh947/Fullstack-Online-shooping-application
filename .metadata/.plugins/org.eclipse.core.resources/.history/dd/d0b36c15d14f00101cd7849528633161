package in.neelesh.online.shopping.service;

import java.util.List;

import in.neelesh.online.shopping.dto.OrderCreateDto;
import in.neelesh.online.shopping.dto.OrderResponseDto;
import in.neelesh.online.shopping.enums.OrderStatus;
import jakarta.validation.Valid;
import jakarta.validation.constraints.NotNull;

public interface OrderService {

	OrderResponseDto createOrder(@Valid OrderCreateDto createDto, String realm, String customerId);

	List<OrderResponseDto> getOrdersByCustomerId(String realm, String customerId);

	OrderResponseDto getOrderById(String realm, String customerId, String orderId);

	void cancelOrder(String realm, String customerId, String orderId);

	OrderResponseDto updateOrderStatus(String realm, String customerId, String orderId,
			@NotNull(message = "Status must be provided") OrderStatus status);

	List<OrderResponseDto> getAllOrders(String realm);

	List<OrderResponseDto> getOrdersForStoreManager(String realm, String storeManagerId);

}

package in.neelesh.online.shopping.service;

import in.neelesh.online.shopping.dto.CartItemRequestDto;
import in.neelesh.online.shopping.dto.CartResponseDto;
import jakarta.validation.Valid;

public interface CartService {

	CartResponseDto getCart(String customerId, String realm);

	CartResponseDto addItemToCart(String customerId, String realm, @Valid CartItemRequestDto dto);

	CartResponseDto updateCartItem(String customerId, String realm, @Valid CartItemRequestDto dto);

	CartResponseDto removeItemFromCart(String customerId, String realm, String productId);

	void clearCart(String customerId, String realm);

}

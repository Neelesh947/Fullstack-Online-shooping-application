package in.neelesh.online.shopping.repository;

import java.util.List;
import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import in.neelesh.online.shopping.entity.Product;

@Repository
public interface ProductRepository extends JpaRepository<Product, String> {

	public boolean existsByNameAndUserId(String name, String userId);

	public List<Product> findByUserId(String userId);

	public Optional<Product> findByIdAndUserIdAndRealm(String productId, String storeManagerId, String realm);
}
